@model Store
@{
    ViewData["Title"] = "Delete Store";
}

<div class="container" style="background-color: #FBFBFD; max-width: 800px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4 fw-bold text-danger">Delete Store</h2>

            <p class="text-center text-muted mb-4">Are you sure you want to delete this store?</p>

            <div class="mb-3">
                <label class="form-label fw-semibold">Store Name</label>
                <p class="form-control-plaintext">@Model.StoreName</p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <p class="form-control-plaintext">@Model.Email</p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Phone</label>
                <p class="form-control-plaintext">@Model.Phone</p>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="StoreID" />
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
