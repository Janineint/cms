@model IEnumerable<Order>

@{
    ViewData["Title"] = "Order List";
}

<div class="w-100 py-5" style="background-color: #FBFBFD;">
    <div class="container" style="max-width: 1000px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-center flex-grow-1 text-dark">Order List</h2>
            <a class="btn btn-primary ms-3" asp-action="Create">+ Add New Order</a>
        </div>

        <table class="table table-hover table-striped rounded">
            <thead class="text-center">
                <tr>
                    <th class="text-white bg-primary">Order ID</th>
                    <th class="text-white bg-primary">Store</th>
                    <th class="text-white bg-primary">Date</th>
                    <th class="text-white bg-primary">Total</th>
                    <th class="text-white bg-primary">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr class="align-middle text-center">
                        <td>@order.TransactionId</td>
                        <td>@order.Store?.StoreName</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>$ @order.TotalCost.ToString("N2")</td>
                        <td>
                            <a class="btn btn-info text-white btn-sm me-1" asp-action="Details" asp-route-id="@order.TransactionId">View</a>
                            <a class="btn btn-warning text-dark btn-sm me-1" asp-action="Edit" asp-route-id="@order.TransactionId">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@order.TransactionId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
