@model Order
@{
    ViewData["Title"] = "Delete Order";
}
<div class="container my-5" style="max-width: 700px; background-color: #FBFBFD;">
    <h2 class="text-center fw-bold mb-4 text-danger">Delete Order</h2>
    <p class="text-center text-muted">Are you sure you want to delete this order?</p>

    <div class="mb-3"><strong>Customer:</strong> @Model.Store?.StoreName</div>
    <div class="mb-3"><strong>Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</div>
    <div class="mb-3"><strong>Total:</strong> $ @Model.TotalCost.ToString("N2")</div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TransactionId" />
        <div class="text-end">
            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div>