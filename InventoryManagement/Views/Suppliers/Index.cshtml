@model IEnumerable<Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="w-100 py-5" style="background-color: #FBFBFD;">
    <div class="container" style="max-width: 1000px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-center flex-grow-1 text-dark">Supplier List</h2>
            <a class="btn btn-primary ms-3" asp-action="Create">+ Add New Supplier</a>
        </div>

        <table class="table table-hover table-striped rounded">
            <thead class="text-white text-center">
                <tr>
                    <th class="text-white bg-primary">ID</th>
                    <th class="text-white bg-primary">Name</th>
                    <th class="text-white bg-primary">Phone</th>
                    <th class="text-white bg-primary">City</th>
                    <th class="text-white bg-primary">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center @(item.SupplierId % 2 == 0 ? "table-light" : "")">
                        <td>@item.SupplierId</td>
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.City</td>
                        <td>
                            <a class="btn btn-info text-white btn-sm me-1" asp-action="Details" asp-route-id="@item.SupplierId">View</a>
                            <a class="btn btn-warning text-dark btn-sm me-1" asp-action="Edit" asp-route-id="@item.SupplierId">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.SupplierId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
